<!--カートに表示するline_itemの部分テンプレート-->
<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= line_item.quantity %> &times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %><br>
  <%= button_to('削除', line_item, method: :delete, data:{confirm: "#{line_item.product.title}を削除します"}) %></td>
</tr>
