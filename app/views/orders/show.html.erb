<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>様
</p>
<!--カートの中身はdestroyしてしまったので、orderから値をとってくる-->
<table>
<caption>
        <p>ご注文いただいた商品は下記のとおりです。</p>
      </caption>
<% @order.line_items.each do|item| %>
  <tr>
    <td><%= item.quantity %> &times;</td>
    <td><%= item.product.title %></td>
    <td class="item_price"><%= number_to_currency(item.total_price) %></td>
  </tr>
<% end %>
  <tr class="total_line">
    <td colspan="2">合計</td>
    <td class="total_cel"><%= number_to_currency(@order.total_price) %></td>
  </tr>
</table>
<!-- end -->
<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

